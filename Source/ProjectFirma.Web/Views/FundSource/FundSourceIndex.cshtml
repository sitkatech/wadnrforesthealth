@using LtInfo.Common
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.AgGridWrappers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.FundSource
@inherits ProjectFirma.Web.Views.FundSource.FundSourceIndex

@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}


<div style="padding-top: 10px;">
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div style="margin-top: 10px">

    @* FundSource Grid *@
    <h3>@FieldDefinition.FundSource.GetFieldDefinitionLabelPluralized()</h3>
    @Html.AgGrid(ViewDataTyped.FundSourceGridSpec, ViewDataTyped.FundSourceGridName, ViewDataTyped.FundSourceGridDataUrl, null, AgGridResizeType.VerticalResizableHorizontalAutoFit)

    @if (ViewDataTyped.userIsLoggedIn)
    {

        <br />

        @* FundSource Allocation Grid *@
        <h3>@FieldDefinition.FundSourceAllocation.GetFieldDefinitionLabelPluralized()</h3>
        <div id="fundSourceAllocationGridAlertBox" class="alert alert-info" role="alert" style="display: none;"></div>
        <div id="fundSourceAllocationGridWithData">
            @Html.AgGrid(ViewDataTyped.FundSourceAllocationGridSpec, ViewDataTyped.FundSourceAllocationGridName, ViewDataTyped.FundSourceAllocationGridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)
        </div>


        <script>

        document.addEventListener("DOMContentLoaded", () => {

            @(ViewDataTyped.FundSourceGridName)GridOptionsApi.addEventListener('selectionChanged', onFundSourceGridRowSelection);

        });

        function onFundSourceGridRowSelection() {
            jQuery("#fundSourceAllocationGridAlertBox").hide();

            const selectedRows = @(ViewDataTyped.FundSourceGridName)GridOptionsApi.getSelectedRows();

            if (selectedRows.length > 0) {

                @(ViewDataTyped.FundSourceAllocationGridName)GridOptionsApi.setColumnFilterModel('@FieldDefinition.FundSourceNumber.GetFieldDefinitionLabel().ToStringSpecialForJavascript()',
                    selectedRows.map(row => row.@(FundSourceGridSpec.FundSourceNumberHiddenColumnName)));

                //console.log(@(ViewDataTyped.FundSourceAllocationGridName)GridOptionsApi.getColumnFilterModel('@FieldDefinition.FundSourceNumber.FieldDefinitionName'));

                if (!@(ViewDataTyped.FundSourceAllocationGridName)GridOptionsApi.getColumnFilterModel('@FieldDefinition.FundSourceNumber.GetFieldDefinitionLabel().ToStringSpecialForJavascript()')) {
                    jQuery("#fundSourceAllocationGridAlertBox").text("No @FieldDefinition.FundSourceNumber.GetFieldDefinitionLabel() matches your selection of '" + selectedRows.map(row => row.@(FundSourceGridSpec.FundSourceNumberHiddenColumnName)).join(',') + "' in the @FieldDefinition.FundSourceAllocation.GetFieldDefinitionLabel() Grid");
                    jQuery("#fundSourceAllocationGridAlertBox").show();
                }

            } else {
                @(ViewDataTyped.FundSourceAllocationGridName)GridOptionsApi.setColumnFilterModel('@FieldDefinition.FundSourceNumber.GetFieldDefinitionLabel().ToStringSpecialForJavascript()', null);
            }

            // Tell grid to run filter operation again
            @(ViewDataTyped.FundSourceAllocationGridName)GridOptionsApi.onFilterChanged();

        }
        </script>
    }

</div>

