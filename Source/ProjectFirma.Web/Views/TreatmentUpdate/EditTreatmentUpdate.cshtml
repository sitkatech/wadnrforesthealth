@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Models

@inherits ProjectFirma.Web.Views.TreatmentUpdate.EditTreatmentUpdate

<script type="text/javascript">
    // <![CDATA[
    jQuery(function () {
        jQuery(".selectpicker").selectpicker("refresh");
    });
    // ]]>
</script>
<script type="text/javascript" src="/Content/Bootstrap-select/bootstrap-select.min.js"></script>
<link rel="stylesheet" href="/Content/Bootstrap-select/bootstrap-select.min.css" type="text/css" />


@Html.ValidationSummary()


@using (Html.BeginForm())
{

    @Html.HiddenFor(m => m.TreatmentUpdateID)
    @Html.HiddenFor(m => m.ProjectUpdateBatchID)

    <div class="form-horizontal">

        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.ProjectLocationUpdateID)
            </div>
            <div class="col-sm-7">
                @Html.DropDownListFor(m => m.ProjectLocationUpdateID, ViewDataTyped.TreatmentAreaList, new Dictionary<string, object> { { "class", "form-control" }, { "style", "width:100%" }, { "data-width", "100%" } })
                @Html.ValidationMessageFor(m => m.ProjectLocationUpdateID)
            </div>
        </div>

        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.TreatmentTypeID)
            </div>
            <div class="col-sm-7">
                @Html.DropDownListFor(m => m.TreatmentTypeID, ViewDataTyped.TreatmentTypeList, new Dictionary<string, object> { { "class", "form-control" }, { "style", "width:100%" }, { "data-width", "100%" } })
                @Html.ValidationMessageFor(m => m.TreatmentTypeID)
            </div>
        </div>

        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.TreatmentDetailedActivityTypeID)
            </div>
            <div class="col-sm-7">
                @Html.DropDownListFor(m => m.TreatmentDetailedActivityTypeID, ViewDataTyped.TreatmentDetailedActivityTypeList, new Dictionary<string, object> { { "class", "form-control" }, { "style", "width:100%" }, { "data-width", "100%" } })
                @Html.ValidationMessageFor(m => m.TreatmentDetailedActivityTypeID)
            </div>
        </div>

        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.TreatmentCodeID)
            </div>
            <div class="col-sm-7">
                @Html.DropDownListFor(m => m.TreatmentCodeID, ViewDataTyped.TreatmentCodeList, new Dictionary<string, object> { { "class", "form-control" }, { "style", "width:100%" }, { "data-width", "100%" } })
                @Html.ValidationMessageFor(m => m.TreatmentCodeID)
            </div>
        </div>

        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.StartDate)
            </div>
            <div class="col-sm-2">
                @Html.EditorFor(m => m.StartDate, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.StartDate)
            </div>
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.EndDate)
            </div>
            <div class="col-sm-2">
                @Html.EditorFor(m => m.EndDate, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.EndDate)
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.FootprintAcres)
            </div>
            <div class="col-sm-2">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.FootprintAcres, new { @class = "form-control", style = "width:100%" })
                    <div class="input-group-addon"><span class="input-group-text">acres</span></div>
                    @Html.ValidationMessageFor(m => m.FootprintAcres)
                </div>
            </div>
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.TreatedAcres)
            </div>
            <div class="col-sm-2">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.TreatedAcres, new { @class = "form-control", style = "width:100%" })
                    <div class="input-group-addon"><span class="input-group-text">acres</span></div>
                    @Html.ValidationMessageFor(m => m.TreatedAcres)
                </div>
            </div>
        </div>
        <div class="form-group no-margin-top">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.CostPerAcre)
            </div>
            <div class="col-sm-2">
                @Html.EditorFor(m => m.CostPerAcre, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.CostPerAcre)
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group no-margin-top col-md-12">
            <div class="col-sm-2 control-label">
                @Html.LabelWithSugarFor(m => m.Notes)
            </div>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.Notes)
            </div>
        </div>
    </div>

}



