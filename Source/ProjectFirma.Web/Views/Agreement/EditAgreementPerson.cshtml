@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using LtInfo.Common.Mvc
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.Agreement.EditAgreementPerson
@using (Html.BeginForm())
{
<div class="form-horizontal">

    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.AgreementPersonRoleID)
        </div>
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.AgreementPersonRoleID, ViewDataTyped.AgreementPersonRoles, new { @class = "form-control", style = "width:auto" })
            @Html.ValidationMessageFor(m => m.AgreementPersonRoleID)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.PersonID)
        </div>
        <div class="col-sm-9">
            @Html.SearchableDropDownListFor(m => m.PersonID, ViewDataTyped.Contacts, new { style = "width: auto;", @class = "form-control selectpicker" })
            @Html.ValidationMessageFor(m => m.PersonID)
        </div>
    </div>

</div>
    @Html.HiddenFor(m => m.AgreementPersonID)
    @Html.HiddenFor(m => m.AgreementID)
}
