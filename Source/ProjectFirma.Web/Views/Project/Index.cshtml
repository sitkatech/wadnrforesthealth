@using LtInfo.Common.BootstrapWrappers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Project
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.DhtmlWrappers
@using ProjectFirma.Web.Views.ProjectCreate
@inherits Index

@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}

@section RightOfPageTitle
{
    @if (ViewDataTyped.DisplayActionButtons)
    {
        @ProjectCreateHelper.AddProjectButton()

         @GisProjectBulkUpdateHelper.GisProjectBulkUploadButton(ViewDataTyped.CurrentPerson)
        <a class="btn btn-firma" href="@ViewDataTyped.ProjectUpdatesUrl" title="View @FieldDefinition.Project.GetFieldDefinitionLabelPluralized() requiring an update">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-edit") Update @FieldDefinition.Project.GetFieldDefinitionLabel()</a>
    }
}

<div style="padding-top: 10px;">
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div style="margin-top: 10px">
    @Html.DhtmlxGrid(ViewDataTyped.GridSpec, ViewDataTyped.GridName, ViewDataTyped.GridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
</div>

<style type="text/css">

    .addSomePadding {
        margin-left: 3px;
    }
</style>

<script type="text/javascript">
    @*jQuery(function() {
        var projectSitkaGrid = Sitka.@ViewDataTyped.GridName;
        var projectGrid = projectSitkaGrid.grid;
        projectGrid.enableSmartRendering();
        projectGrid.enableDistributedParsing(true, 10, 250);
    });*@
</script>
