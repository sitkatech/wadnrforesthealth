@using ProjectFirma.Web.Models
@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectFirma.Web.Views.ProjectFunding.ProjectFundingDetail
<div class="table-responsive">

    @if (ViewDataTyped.FundSourceAllocationRequestAmounts.Any())
    {
        <p>The table below shows the identified fund source allocations contributing to the project cost. This may not be a comprehensive list of all project funding sources, nor an estimate of the full project cost.</p>
        <div style="overflow-x: auto">
            <table class="table table-striped table-condensed table-hover">
                <tr>
                    <th>@Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocation)</th>
                    @if (ViewDataTyped.IsMatchAndPayRelevant)
                    {
                        <th style="text-align: right">@Html.LabelWithSugarFor(FieldDefinition.ProjectFundSourceAllocationRequestMatchAmount)</th>
                        <th style="text-align: right">@Html.LabelWithSugarFor(FieldDefinition.ProjectFundSourceAllocationRequestPayAmount)</th>
                    }
                    <th style="text-align: right">@Html.LabelWithSugarFor(FieldDefinition.ProjectFundSourceAllocationRequestTotalAmount)</th>
                </tr>
                @foreach (var fundSourceAllocationRequestAmount in ViewDataTyped.FundSourceAllocationRequestAmounts.OrderBy(x => x.FundSourceAllocation.DisplayName))
                {
                    <tr>
                        <td>@Html.Raw(fundSourceAllocationRequestAmount.FundSourceAllocation.FundSourceNumberAndFundSourceAllocationDisplayNameAsUrl)</td>
                        @if (ViewDataTyped.IsMatchAndPayRelevant)
                        {
                            <th class="text-right">@fundSourceAllocationRequestAmount.MatchAmount.ToStringCurrency()</th>
                            <th class="text-right">@fundSourceAllocationRequestAmount.PayAmount.ToStringCurrency()</th>
                        }
                        <th class="text-right">@fundSourceAllocationRequestAmount.TotalAmount.ToStringCurrency()</th>
                    </tr>
                }
                @if (ViewDataTyped.FundSourceAllocationRequestAmounts.Any())
                {
                    <tr>
                        <th class="text-right">Total</th>
                        @if (ViewDataTyped.IsMatchAndPayRelevant)
                        {
                            <th class="text-right">@ViewDataTyped.FundSourceAllocationRequestAmounts.Sum(x => x.MatchAmount).ToStringCurrency()</th>
                            <th class="text-right">@ViewDataTyped.FundSourceAllocationRequestAmounts.Sum(x => x.PayAmount).ToStringCurrency()</th>
                        }
                        <th class="text-right">@ViewDataTyped.FundSourceAllocationRequestAmounts.Sum(x => x.TotalAmount).ToStringCurrency()</th>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <p class="systemText">No @FieldDefinition.FundSourceAllocation.GetFieldDefinitionLabel() identified for this @FieldDefinition.Project.GetFieldDefinitionLabel().</p>
    }
</div>
