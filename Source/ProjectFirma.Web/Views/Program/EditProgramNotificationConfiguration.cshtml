@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Program.EditProgramNotificationConfiguration


 

<style>
    .form-group .radio-inline {
        padding-top: 0;
    }
    .form-group input[type=text] {
        margin-top: -5px;
    }

</style>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.ValidationSummary()

    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.ProgramNotificationTypeID)</div>
        <div class="col-xs-8">
            @Html.DropDownListFor(m => m.ProgramNotificationTypeID, ViewDataTyped.ProgramNotificationTypes)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.RecurrenceIntervalID)</div>
        <div class="col-xs-8">
            @Html.DropDownListFor(m => m.RecurrenceIntervalID, ViewDataTyped.RecurrenceIntervals)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-4 control-label">@Html.LabelWithSugarFor(m => m.NotificationEmailText)</div>
        <div class="col-xs-8">
            @Html.CkEditorFor(m => m.NotificationEmailText, CkEditorExtension.CkEditorToolbar.All, true, true, null)
            <br/>
            <p>The notification email will also include a link at the bottom to the relevant project(s). </p>
        </div>
    </div>

    @Html.HiddenFor(m => m.ProgramID)

    @Html.HiddenFor(m => m.ProgramNotificationConfigurationID)

</div>

}