    <div class="row">
        <div class="col-md-12"><label>Project Type</label></div>
    </div>

    <div class="row">
        @*Selectpicker*@
        <div class="col-md-12">
            <div class="input-group" style="width: 100%;">
                <input type="text" id="projectTypeSourceValueText" ng-model="projectTypeSourceValue" />

                <select id="projectTypeSelectList" ng-model="selectedProjectTypeText" data-width="100%">
                    <option value="" selected>Select one</option>
                    <option ng-repeat="projectType in AngularViewData.ProjectTypeSelectListItems"
                            ng-bind="projectType.Text"
                            ng-value="projectType.Text"></option>
                </select>
                <button type="button" class="btn btn-sm btn-firma" ng-click="addProjectType(selectedProjectTypeText, projectTypeSourceValue)" ng-disabled="!selectedProjectTypeText">
                    <span class="glyphicon glyphicon-plus"></span>
                    Add
                </button>
            </div>
        </div>
    </div>

    <div class="row" ng-repeat="projectTypeSimple in AngularModel.ProjectTypeSimples" style="margin-top: 5px;">
        @*Selections*@
        <div class="col-md-12">
            <span>
                <a href="#" ng-click="removeProjectTypeSimple(projectTypeSimple); $event.preventDefault();">
                    <i class="glyphicon glyphicon-trash" title="Remove @FieldDefinition.ProjectType.GetFieldDefinitionLabel() mapping" alt="Remove @FieldDefinition.ProjectType.GetFieldDefinitionLabel() mapping"></i>
                </a>
            </span>
            <span ng-bind="projectTypeSimple.GisCrosswalkSourceValue"></span>
            <span ng-bind="projectTypeSimple.GisCrosswalkMappedValue"></span>
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.GisUploadSourceOrganizationID)

        <div ng-repeat="projectTypeSimple in AngularModel.ProjectTypeSimples">
            <input type="hidden" name="@Html.NameFor(x => x.ProjectTypeSimples[0].GisCrosswalkDefaultID).ToString().Replace("0", "{{$index}}")" value="{{projectTypeSimple.GisCrosswalkDefaultID}}" />
            <input type="hidden" name="@Html.NameFor(x => x.ProjectTypeSimples[0].FieldDefinitionID).ToString().Replace("0", "{{$index}}")" value="{{projectTypeSimple.FieldDefinitionID}}" />
            <input type="hidden" name="@Html.NameFor(x => x.ProjectTypeSimples[0].GisCrosswalkMappedValue).ToString().Replace("0", "{{$index}}")" value="{{projectTypeSimple.GisCrosswalkMappedValue}}" />
            <input type="hidden" name="@Html.NameFor(x => x.ProjectTypeSimples[0].GisCrosswalkSourceValue).ToString().Replace("0", "{{$index}}")" value="{{projectTypeSimple.GisCrosswalkSourceValue}}" />
        </div>

    }


</div>




