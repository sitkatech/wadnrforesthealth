@using LtInfo.Common.BootstrapWrappers
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.ModalDialog
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@inherits ProjectFirma.Web.Views.MapLayer.Index
@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}

@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }

<div class="col-md-12" style="margin-bottom: 5px; padding: 0;">
    <div class="pull-right">
        @ModalDialogFormHelper.ModalDialogFormLink(string.Format("{0} Add External Map Layer", BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-plus")), ViewDataTyped.NewUrl, "Add External Map Layer", new List<string> { "btn", "btn-firma", "btn-sm" }, ViewDataTyped.UserCanManage)
    </div>
</div>
<div class="clearfix"></div>

<div style="margin-top: 10px;">
    @Html.DhtmlxGrid(ViewDataTyped.ExternalMapLayerGridSpec, ViewDataTyped.ExternalMapLayerGridName, ViewDataTyped.ExternalMapLayerGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
</div>
