            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-3 control-label">
                @Html.LabelWithSugarFor(m => m.FundSourceAllocationName)
            </div>
            <div class="col-xs-4">
                @Html.TextBoxFor(m => m.FundSourceAllocationName, new { style = "width: 100%;", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FundSourceAllocationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-3 control-label">
                @Html.LabelWithSugarFor(m => m.OrganizationID)
            </div>
            <div class="col-xs-6">
                @Html.DropDownListFor(m => m.OrganizationID, ViewDataTyped.Organizations, new { style = "width: auto;", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OrganizationID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-3 control-label">
                @Html.LabelWithSugarFor(m => m.FundSourceManagerID)
            </div>
