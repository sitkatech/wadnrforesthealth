@using (Html.BeginForm())
{
    <div class="form-horizontal" id="EditFundSourceAllocationAngularApp" ng-controller="EditFundSourceAllocationController">

        <div class="form-group">
            <div class="col-xs-3 control-label">
                @Html.LabelWithSugarFor(m => m.FundSourceID)
            </div>
            <div class="col-xs-6">
                @Html.DropDownListFor(m => m.FundSourceID, ViewDataTyped.FundSourceNumbers, new { style = "width: auto;", @class = "form-control fundSourceSelectList" })
