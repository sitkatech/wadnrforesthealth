@using LtInfo.Common.AgGridWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using ProjectFirma.Web.Views.Shared.ProjectPerson
@inherits ProjectFirma.Web.Views.ProjectCreate.Treatments

@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}
<div class="row">
    <div class="col-xs-12">
        <div class="panel-body" id="treatmentGridNonFlattened">
            @Html.AgGrid(ViewDataTyped.TreatmentGridSpec, ViewDataTyped.TreatmentGrid, ViewDataTyped.TreatmentGridDataUrl, "height:300px", AgGridResizeType.VerticalResizableHorizontalAutoFit)
        </div>

    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <hr />
        <div class="pull-right">
            <a class="btn btn-xs btn-firma" href="@ViewDataTyped.ProposalTreatmentsUrl">Save</a>
            <a class="btn btn-xs btn-firma" href="@ViewDataTyped.ProposalClassificationsUrl">Save &amp; Continue</a>
        </div>
    </div>
</div>



