@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.FundSourceAllocationControls
@inherits FundSourceAllocationBasics

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

        .basicsLayout .row div {
            padding-left: 0;
            padding-right: 5px;
        }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocationName)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSourceAllocationName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.Organization)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.Organization.GetDisplayNameAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceManager)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSourceManager.GetFullNameFirstLastAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramManager)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GetAllProgramManagerPersonNamesAsUrls()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceStatus)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.FundSourceStatus.FundSourceStatusName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceType)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.FundSourceTypeDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceNumber)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.GetFundSourceNumberAsUrl()</span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramIndexProjectCode)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GetAssociatedProgramIndexProjectCodePairsCommaDelimited()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.CFDA)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.CFDANumber</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.Division)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.DivisionNameDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.DNRUplandRegion)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.DNRUplandRegion.GetRegionDisplayNameAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.AllocationAmount)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.AllocationAmount.ToStringCurrency()</span>
        </div>
    </div>
    @if (ViewDataTyped.IsUserLoggedIn)
    {
        <div class="row">
            <div class="col-sm-5 text-right">
                @Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocationCurrentBalance)
            </div>
            <div class="col-sm-7">
                <span>@ViewDataTyped.FundSourceAllocation.GetTotalBudgetVsActualLineItem().BudgetMinusExpendituresFromDatamart.ToString("C") </span>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceStartDate)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.StartDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceEndDate)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.EndDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FederalFundCode)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FederalFundCodeDisplay</span>
        </div>
    </div>



    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocationPriority)
        </div>
        <div class="col-sm-7">
            <span>@(ViewDataTyped.FundSourceAllocation.FundSourceAllocationPriority != null ? ViewDataTyped.FundSourceAllocation.FundSourceAllocationPriority.FundSourceAllocationPriorityNumber : (int?)null)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocationFundFSPs)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.HasFundFSPs.ToYesNo("N/A")</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocationSource)
        </div>
        <div class="col-sm-7">
            <span>@(ViewDataTyped.FundSourceAllocation.FundSourceAllocationSource != null ? ViewDataTyped.FundSourceAllocation.FundSourceAllocationSource.FundSourceAllocationSourceDisplayName : null)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FundSourceAllocationLikelyToUse)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GetAllLikelyToUsePersonNamesAsUrls()</span>
        </div>
    </div>
</div>