@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.Views
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ProjectControls
@inherits ProjectBasics

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">

    <div class="row">
        <div class="col-xs-12">
            <label>@FieldDefinition.Project.GetFieldDefinitionLabel() Category</label>
        </div>
    </div>

    @{ ProjectTaxonomy.RenderPartialView(Html, ViewDataTyped.ProjectTaxonomyViewData); }

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.FhtProjectNumber)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.FhtProjectNumber
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.FocusArea)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.FocusArea.GetDisplayNameAsUrl()
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectStage)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.ProjectStage.ProjectStageDisplayName
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectDescription)
        </div>
        <div class="col-sm-9">
            @Html.Raw(ViewDataTyped.Project.ProjectDescription.HtmlEncodeWithBreaks())
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectApplicationDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.GetApplicationDate()
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectDecisionDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.GetDecisionDate()
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectInitiationDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.GetPlannedDate()
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ExpirationDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.GetExpirationDateFormatted()
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.CompletionDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.GetCompletionDateFormatted()
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.Program)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.ProjectPrograms.ToProgramListDisplay(true)
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectIdentifier)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.ProjectGisIdentifier
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.PercentageMatch)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.Project.PercentageMatchFormatted
        </div>
    </div>

</div>
