@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.Views
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.ProjectControls
@inherits ProjectBasics

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectStage)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.ProjectStageDisplayName
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectInitiationDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.PlannedDateString
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.CompletionDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.CompletedDateString
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.LeadImplementerOrganization)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.LeadImplementerDisplay
        </div>
    </div>

    <hr />
    
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ProjectDescription)
        </div>
        <div class="col-sm-9">
            @Html.Raw(ViewDataTyped.ProjectDescription)
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.ExpirationDate)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.ExpirationDateString
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.FocusArea)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.FocusAreaDisplayName
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.Program)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.ProjectProgramListDisplayString
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelWithSugarFor(FieldDefinition.PercentageMatch)
        </div>
        <div class="col-sm-9">
            @ViewDataTyped.PercentageMatchFormatted
        </div>
    </div>





</div>
