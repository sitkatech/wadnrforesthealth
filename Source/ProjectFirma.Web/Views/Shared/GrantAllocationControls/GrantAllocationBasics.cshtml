@using LtInfo.Common
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.GrantAllocationControls
@inherits GrantAllocationBasics

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationName)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GrantAllocationName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.Organization)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.Organization.GetDisplayNameAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantManager)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GrantManager.GetFullNameFirstLastAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramManager)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GetAllProgramManagerPersonNamesAsUrls()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantStatus)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.FundSourceStatus.GrantStatusName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantType)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.GrantTypeDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantNumber)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.GetGrantNumberAsUrl()</span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.ProgramIndexProjectCode)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GetAssociatedProgramIndexProjectCodePairsCommaDelimited()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.CFDA)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FundSource.CFDANumber</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.Division)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.DivisionNameDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.DNRUplandRegion)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.DNRUplandRegion.GetRegionDisplayNameAsUrl()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.AllocationAmount)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.AllocationAmount.ToStringCurrency()</span>
        </div>
    </div>
    @if (ViewDataTyped.IsUserLoggedIn)
    {
        <div class="row">
            <div class="col-sm-5 text-right">
                @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationCurrentBalance)
            </div>
            <div class="col-sm-7">
                <span>@ViewDataTyped.FundSourceAllocation.GetTotalBudgetVsActualLineItem().BudgetMinusExpendituresFromDatamart.ToString("C") </span>
            </div>
        </div>
    }
    
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantStartDate)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.StartDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantEndDate)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.EndDateDisplay</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.FederalFundCode)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.FederalFundCodeDisplay</span>
        </div>
    </div>
    
    
    
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationPriority)
        </div>
        <div class="col-sm-7">
            <span>@(ViewDataTyped.FundSourceAllocation.GrantAllocationPriority != null ? ViewDataTyped.FundSourceAllocation.GrantAllocationPriority.GrantAllocationPriorityNumber : (int?)null)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationFundFSPs)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.HasFundFSPs.ToYesNo("N/A")</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationSource)
        </div>
        <div class="col-sm-7">
            <span>@(ViewDataTyped.FundSourceAllocation.GrantAllocationSource != null ? ViewDataTyped.FundSourceAllocation.GrantAllocationSource.GrantAllocationSourceDisplayName : null)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-right">
            @Html.LabelWithSugarFor(FieldDefinition.GrantAllocationLikelyToUse)
        </div>
        <div class="col-sm-7">
            <span>@ViewDataTyped.FundSourceAllocation.GetAllLikelyToUsePersonNamesAsUrls()</span>
        </div>
    </div>
</div>